@model Blog

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout1";
}

<h1>Add New Blog</h1>
<div class="container">
    <form asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="Title" class="form-control" required maxlength="100">
            <span asp-validation-for="Title" class="text-danger"></span>  
        </div>

        <div class="form-group">
            <label for="content">ShortDescription:</label>
            <textarea id="content" asp-for="ShortDescription" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>  
        </div>
        
        <div class="form-group">
            <label for="content">Description:</label>
            <textarea id="content" asp-for="Description" class="form-control" rows="8" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>  
        </div>
        
        <div class="form-group">
            <label asp-for="ImagePath" >Choose an Image</label>
            <div class="custom-file">
                <input type="file" id="uploadBox" name="file" class="custom-file-input" >
                <label class="custom-file-label" for="uploadBox">Select Image</label>
            </div>
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        
        
        <button type="submit" class="btn btn-primary"> <i class="mdi mdi-content-save"></i> Save</button>
        <button asp-action="Index" asp-controller="Home" class="btn btn-light"><i class="mdi mdi-close"></i> Cancel</button>
    </form>
</div>


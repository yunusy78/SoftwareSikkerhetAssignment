@using Ganss.XSS;
@model Blog

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout1";
}

<h1>Add New Blog</h1>
<div class="container">
    <form asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="Title" class="form-control" required maxlength="100">
            <span asp-validation-for="Title" class="text-danger"></span>  
        </div>

        <div class="form-group">
            <label for="content">ShortDescription:</label>
            <textarea id="content" asp-for="ShortDescription" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>  
        </div>
        
        <div class="form-group">
            <label for="content">Description:</label>
            <textarea id="summer" asp-for="Description" class="form-control" rows="8" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>  
        </div>
        
        <div class="form-group">
            <label asp-for="ImagePath" >Choose an Image</label>
            <div class="custom-file">
                <input type="file" id="uploadBox" name="file" class="custom-file-input" >
                <label class="custom-file-label" for="uploadBox">Select Image</label>
            </div>
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary"> <i class="mdi mdi-content-save"></i> Save</button>
        <button asp-action="Index" asp-controller="Home" class="btn btn-light"><i class="mdi mdi-close"></i> Cancel</button>
    </form>
</div>


<span>@ViewBag.Title</span>
<strong>@ViewBag.Description</strong>


<html lang="en">
<head>
    <meta charset="UTF-8">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
</head>
<body>
<div id="summernote"></div>
<script>
      $('#summernote').summernote({
        placeholder: 'Hello stand alone ui',
        tabsize: 2,
        height: 120,
        toolbar: [
          ['style', ['style']],
          ['font', ['bold', 'underline', 'clear']],
          ['color', ['color']],
          ['para', ['ul', 'ol', 'paragraph']],
          ['table', ['table']],
          ['insert', ['link', 'picture', 'video']],
          ['view', ['fullscreen', 'codeview', 'help']]
        ]
      });
    </script>
</body>
</html>
